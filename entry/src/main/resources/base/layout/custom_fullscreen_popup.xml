<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:testtouch"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:rebound_effect="true"
    ohos:background_element="$graphic:bg_fullscreen_half_lucency">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:alignment="top"
        ohos:background_element="$graphic:bg_round"
        ohos:top_margin="80vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="15vp"
            ohos:text="全屏弹窗"
            ohos:text_alignment="center"
            ohos:text_color="#111"
            ohos:text_size="20fp"
            ohos:margin="20vp"
            ohos:background_element="$color:_xpopup_gray_color"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:multiple_lines="true"
            ohos:padding="10vp"
            ohos:text="我是全屏弹窗，可以设置任意的动画器。我看起来就像一个从底部弹出的Ability，可以用来做一些登录，选择界面。"
            ohos:text_alignment="center"
            ohos:text_color="#333"
            ohos:text_size="18fp"/>

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="#28822E"
            ohos:bottom_margin="5vp"
            ohos:hint="测试软键盘交互"
            ohos:left_margin="3vp"
            ohos:right_margin="3vp"
            ohos:text_size="17fp"
            ohos:top_margin="15vp"/>

        <Component
            ohos:height="300vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"/>

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="#28822E"
            ohos:bottom_margin="5vp"
            ohos:hint="测试软键盘交互"
            ohos:left_margin="3vp"
            ohos:right_margin="3vp"
            ohos:text_size="17fp"
            ohos:top_margin="15vp"/>

        <Component
            ohos:height="150vp"
            ohos:width="match_parent"
            ohos:background_element="#9C27B0"/>

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="#28822E"
            ohos:bottom_margin="5vp"
            ohos:hint="测试软键盘交互"
            ohos:left_margin="3vp"
            ohos:right_margin="3vp"
            ohos:text_size="17fp"
            ohos:top_margin="85vp"/>

        <Component
            ohos:height="150vp"
            ohos:width="match_parent"
            ohos:background_element="#AC5959"/>

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="#28822E"
            ohos:bottom_margin="5vp"
            ohos:hint="测试软键盘交互"
            ohos:left_margin="3vp"
            ohos:right_margin="3vp"
            ohos:text_size="17fp"
            ohos:top_margin="85vp"/>
    </DirectionalLayout>

</ScrollView>