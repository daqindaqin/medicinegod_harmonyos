<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:margin="5vp"
    ohos:bottom_padding="10vp"
    ohos:background_element="$graphic:bg_chat_moudle_background"
    >
    <!-- 头部-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="left|vertical_center"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:comm_head"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:margin="10vp"
            ohos:image_src="$media:head"
            ohos:scale_mode="stretch"/>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:alignment="vertical_center|horizontal_center">
            <!-- 上层名字和时间-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:alignment="vertical_center|left">
                <Text
                    ohos:id="$+id:comm_name"
                    ohos:height="match_content"
                    ohos:width="160vp"
                    ohos:text="Name666666666666666666666daddasfafsafadsfafadadadagjeg"
                    ohos:text_size="16fp"
                    ohos:text_color="$color:black_clear"
                    ohos:text_weight="700"
                    ohos:top_margin="8vp"
                    ohos:start_margin="5vp"
                    ohos:end_margin="10vp"
                    ohos:bottom_margin="5vp"
                    ohos:scrollable="true"
                    ohos:text_alignment="left"
                    />
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="vertical_center|right">
                    <Text
                        ohos:id="$+id:comm_time"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="2022-3-19"
                        ohos:text_alignment="center"
                        ohos:text_color="$color:black_line"
                        ohos:text_weight="500"
                        ohos:top_margin="8vp"
                        ohos:start_margin="5vp"
                        ohos:end_margin="10vp"
                        ohos:start_padding="10vp"
                        ohos:end_padding="10vp"
                        ohos:text_size="12fp"
                        />
                </DirectionalLayout>
            </DirectionalLayout>
            <!-- 下层整行签名-->
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                <Text
                    ohos:id="$+id:comm_qianming"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="这是一条长长长长长长长长长长长长长长长长长长的签名"
                    ohos:text_size="14fp"
                    ohos:text_color="$color:black_line"
                    ohos:text_weight="500"
                    ohos:max_width="160vp"
                    ohos:top_margin="5vp"
                    ohos:start_margin="5vp"
                    ohos:end_margin="25vp"
                    ohos:bottom_margin="5vp"
                    ohos:scrollable="true"
                    ohos:text_alignment="left"
                    />
            </DirectionalLayout>
        </DirectionalLayout>

    </DirectionalLayout>
    <!-- 中间文字和图片-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="top|horizontal_center"
        ohos:orientation="vertical"
        >
        <!--中间的文本-->
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="top">
            <Text
                ohos:id="$+id:comm_context"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text_weight="300"
                ohos:text="        好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶好耶耶好耶好耶好耶好耶好耶好耶好耶..."
                ohos:text_size="14fp"
                ohos:text_color="$color:black_clear"
                ohos:bottom_margin="5vp"
                ohos:start_margin="15vp"
                ohos:end_margin="15vp"
                ohos:multiple_lines="true"/>
            <Text
                ohos:id="$+id:comm_allcontext"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_weight="500"
                ohos:text="查看全文"
                ohos:text_size="14fp"
                ohos:text_color="$color:blue"
                ohos:bottom_margin="5vp"
                ohos:start_margin="15vp"
                ohos:end_margin="15vp"
                ohos:italic="true"
                ohos:below="$id:comm_context"
                ohos:top_margin="-22vp"
                ohos:start_padding="60vp"
                ohos:end_padding="50vp"/>
        </DependentLayout>
        <!--图片-->
        <Image
            ohos:id="$+id:comm_image"
            ohos:height="180vp"
            ohos:width="320vp"
            ohos:margin="10vp"
            ohos:image_src="$media:test"
            ohos:scale_mode="zoom_center"
            ohos:background_element="#30d3d7d4"/>
    </DirectionalLayout>
    <!--下方-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:bg_community_tool_zanzhuancang"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:top_padding="5vp"
        ohos:bottom_padding="5vp"
        ohos:alignment="vertical_center|left">

    </DirectionalLayout>





</DirectionalLayout>
