<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:detail_scrollview"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:rebound_effect="true"
    ohos:background_element="$graphic:bg_fullscreen_half_lucency">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:alignment="top|vertical_center"
        ohos:background_element="$graphic:bg_round"
        ohos:top_margin="80vp"
        ohos:bottom_padding="100vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|vertical_center">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="药品详情"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="700"
                ohos:margin="20vp"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:alignment="right|vertical_center"
                ohos:start_margin="10vp"
                ohos:end_margin="10vp">
                <Text
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:margin="10vp"
                    ohos:background_element="$graphic:ic_detail_takeit"/>
                <Text
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:margin="10vp"
                    ohos:background_element="$graphic:ic_detail_share"/>
                <Text
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:margin="10vp"
                    ohos:background_element="$graphic:ic_detail_delete"/>
            </DirectionalLayout>
        </DirectionalLayout>

        <Component
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="$color:black_line"/>
        <Image
            ohos:height="180vp"
            ohos:width="320vp"
            ohos:scale_mode="stretch"
            ohos:background_element="$color:blue_clear"
            ohos:margin="20vp"
            ohos:image_src="$media:test"/>
        <!--名字-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_name"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_name"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="药名药名药名药名药名药名药名药名"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="10vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--描述-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_desp"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_desp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="10vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:multiple_lines="true"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--标签-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_elabel"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_elabel"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="标签1  标签2  标签3  标签4  标签5"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--过期时间-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_outdate"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_outdate"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="距过期还有 1999 天"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--otc-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_otc"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_otc"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="OTC (非处方药)"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--条码-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_barcode"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_barcode"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="123456789012"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--用量-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_usage"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_usage"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="1包/3次/天"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--余量-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_yu"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_yu"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="剩余 9999 包"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>
        <!--公司-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|top|vertical_center">
            <Text
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_mdc_company"
                ohos:top_margin="15vp"
                ohos:start_margin="15vp"
                ohos:end_margin="10vp"/>
            <Text
                ohos:id="$+id:dtl_mdc_company"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="大老板大老板有限集团公司"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="500"
                ohos:top_margin="15vp"
                ohos:bottom_margin="10vp"
                ohos:max_width="230vp"
                ohos:scrollable="true"
                ohos:multiple_lines="false"/>
            <Text
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:background_element="$graphic:ic_mdc_edit"
                ohos:margin="10vp"/>
        </DirectionalLayout>

    </DirectionalLayout>

</ScrollView>