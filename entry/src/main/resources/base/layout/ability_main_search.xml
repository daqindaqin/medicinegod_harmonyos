<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical"
    ohos:background_element="$color:white">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:orientation="vertical"
        ohos:top_margin="20vp"
        ohos:bottom_margin="5vp"
        ohos:start_margin="10vp"
        ohos:end_margin="10vp">
        <TextField
            ohos:id="$+id:src_srcbox"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text=""
            ohos:hint="填写需查找的药名"
            ohos:text_alignment="left"
            ohos:padding="10vp"
            ohos:text_color="$color:black_clear"
            ohos:hint_color="$color:black_line"
            ohos:text_size="22vp"
            ohos:text_weight="700"
            ohos:multiple_lines="true"
            ohos:input_enter_key_type="enter_key_type_done"
            ohos:max_text_lines="3"
            ohos:background_element="$graphic:bg_src_textfield_search"
            ohos:start_margin="5vp"
            ohos:end_margin="5vp"/>
        <ScrollView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:start_margin="5vp"
            ohos:end_margin="5vp">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:alignment="left|vertical_center"
            >
            <Text
                ohos:id="$+id:src_back"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:bg_search_method"
                ohos:start_padding="10vp"
                ohos:end_padding="10vp"
                ohos:top_padding="5vp"
                ohos:bottom_padding="5vp"
                ohos:top_margin="15vp"
                ohos:bottom_margin="15vp"
                ohos:start_margin="0vp"
                ohos:end_margin="10vp"
                ohos:text="◀ 返回"
                ohos:text_weight="500"
                ohos:text_color="$color:white"
                ohos:text_size="18vp"/>
            <Text
                ohos:id="$+id:src_srcmethod"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:bg_search_method"
                ohos:start_padding="10vp"
                ohos:end_padding="10vp"
                ohos:top_padding="5vp"
                ohos:bottom_padding="5vp"
                ohos:top_margin="15vp"
                ohos:bottom_margin="15vp"
                ohos:start_margin="0vp"
                ohos:end_margin="10vp"
                ohos:text="药 名 ▼"
                ohos:text_weight="500"
                ohos:text_color="$color:white"
                ohos:text_size="18vp"/>
            <Text
                ohos:id="$+id:src_srceen"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:bg_search_method"
                ohos:start_padding="10vp"
                ohos:end_padding="10vp"
                ohos:top_padding="5vp"
                ohos:bottom_padding="5vp"
                ohos:top_margin="15vp"
                ohos:bottom_margin="15vp"
                ohos:start_margin="0vp"
                ohos:end_margin="10vp"
                ohos:text="筛 选 ▼"
                ohos:text_weight="500"
                ohos:text_color="$color:white"
                ohos:text_size="18vp"/>
            <Text
                ohos:id="$+id:src_src"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:bg_src_textfield_search"
                ohos:text_weight="500"
                ohos:start_padding="10vp"
                ohos:end_padding="10vp"
                ohos:top_padding="5vp"
                ohos:bottom_padding="5vp"
                ohos:top_margin="15vp"
                ohos:bottom_margin="15vp"
                ohos:start_margin="0vp"
                ohos:end_margin="10vp"
                ohos:text="搜 索 ▶"
                ohos:text_color="$color:purple_clear"
                ohos:text_size="18vp"/>

        </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="$color:purple"
        ohos:altitude="3vp"/>
    <ListContainer
        ohos:id="$+id:src_list"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:scrollbar_color="$color:blue"
        ohos:start_padding="5vp"
        ohos:end_padding="5vp"
        ohos:bottom_padding="10vp"
        ohos:background_element="$color:purple_light"/>

</DirectionalLayout>


