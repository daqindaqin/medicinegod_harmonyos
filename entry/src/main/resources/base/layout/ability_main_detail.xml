<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top|vertical_center"
    ohos:orientation="vertical">


    <!--底部-->
    <ScrollView
        ohos:id="$+id:detail_scrollview"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$color:white">



        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="vertical_center|top"
            ohos:bottom_padding="150vp"
            ohos:orientation="vertical">
            <Component
                ohos:id="$+id:dtl_tool"
                ohos:height="1"
                ohos:width="match_parent"/>

            <DependentLayout
                ohos:height="match_content"
                ohos:width="match_parent">

                <Image
                    ohos:id="$+id:dtl_mdc_img"
                    ohos:height="200vp"
                    ohos:width="match_parent"
                    ohos:background_element="$color:white"
                    ohos:below="$id:dtl_tool"
                    ohos:image_src="$media:test"
                    ohos:scale_mode="stretch"
                    />

                <Image
                    ohos:id="$+id:dtl_mdc_back"
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:below="$id:dtl_tool"
                    ohos:bottom_padding="5vp"
                    ohos:end_padding="5vp"
                    ohos:image_src="$media:dtl_mdc_back"
                    ohos:scale_mode="zoom_center"
                    ohos:start_margin="20vp"
                    ohos:start_padding="5vp"
                    ohos:top_margin="20vp"
                    ohos:top_padding="5vp"
                    />
            </DependentLayout>


            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:bottom_margin="10vp"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:text="药品详情"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="30vp"
                    ohos:text_weight="700"
                    ohos:top_margin="10vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="right|vertical_center"
                    ohos:orientation="horizontal">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center|horizontal_center"
                        ohos:orientation="vertical">

                        <Image
                            ohos:id="$+id:dtl_mdc_use"
                            ohos:height="25vp"
                            ohos:width="25vp"
                            ohos:bottom_margin="10vp"
                            ohos:end_margin="10vp"
                            ohos:image_src="$media:dtl_mdc_use"
                            ohos:scale_mode="zoom_center"
                            ohos:start_margin="10vp"
                            ohos:top_margin="10vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="使用"
                            ohos:text_color="$color:blue_clear"
                            ohos:text_size="10vp"/>
                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center|horizontal_center"
                        ohos:orientation="vertical">

                        <Image
                            ohos:id="$+id:dtl_mdc_love"
                            ohos:height="25vp"
                            ohos:width="25vp"
                            ohos:bottom_margin="10vp"
                            ohos:end_margin="10vp"
                            ohos:image_src="$media:dtl_mdc_love_no"
                            ohos:scale_mode="zoom_center"
                            ohos:start_margin="10vp"
                            ohos:top_margin="10vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="喜欢"
                            ohos:text_color="$color:red_clear"
                            ohos:text_size="10vp"/>
                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center|horizontal_center"
                        ohos:orientation="vertical">

                        <Image
                            ohos:id="$+id:dtl_mdc_edit"
                            ohos:height="25vp"
                            ohos:width="25vp"
                            ohos:bottom_margin="10vp"
                            ohos:end_margin="10vp"
                            ohos:image_src="$media:dtl_mdc_edit"
                            ohos:scale_mode="zoom_center"
                            ohos:start_margin="10vp"
                            ohos:top_margin="10vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="编辑"
                            ohos:text_color="$color:orange_clear"
                            ohos:text_size="10vp"/>
                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center|horizontal_center"
                        ohos:orientation="vertical">

                        <Image
                            ohos:id="$+id:dtl_mdc_share"
                            ohos:height="25vp"
                            ohos:width="25vp"
                            ohos:bottom_margin="10vp"
                            ohos:end_margin="10vp"
                            ohos:image_src="$media:dtl_mdc_share"
                            ohos:scale_mode="zoom_center"
                            ohos:start_margin="10vp"
                            ohos:top_margin="10vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="分享"
                            ohos:text_color="$color:purple_clear"
                            ohos:text_size="10vp"/>
                    </DirectionalLayout>
                </DirectionalLayout>
            </DirectionalLayout>

            <!--图像-->


            <!--名字-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
