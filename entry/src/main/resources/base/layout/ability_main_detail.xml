<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top|vertical_center"
    ohos:orientation="vertical">


    <!--顶部-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="left|vertical_center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:dtl_mdc_back"
            ohos:height="50vp"
            ohos:width="45vp"
            ohos:background_element="$graphic:ic_dtl_mdc_back"
            ohos:start_margin="20vp"
            ohos:top_margin="15vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="20vp"
            ohos:end_margin="10vp"
            ohos:start_margin="-10vp"
            ohos:text="药品详情"
            ohos:text_alignment="left"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="700"
            ohos:top_margin="20vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="right|vertical_center"
            ohos:end_margin="10vp"
            ohos:orientation="horizontal"
            ohos:start_margin="10vp">

            <Text
                ohos:id="$+id:dtl_mdc_more"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_dtl_mdc_more"
                ohos:bottom_margin="10vp"
                ohos:end_margin="10vp"
                ohos:start_margin="10vp"
                ohos:top_margin="15vp"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="$color:black_line"/>


    <!--底部-->
    <ScrollView
        ohos:id="$+id:detail_scrollview"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$color:white"
        ohos:rebound_effect="true">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="vertical_center|top"
            ohos:bottom_padding="150vp"
            ohos:orientation="vertical">
            <!--图像-->
            <Image
                ohos:id="$+id:dtl_mdc_img"
                ohos:height="180vp"
                ohos:width="320vp"
                ohos:background_element="$color:white"
                ohos:image_src="$media:test"
                ohos:margin="20vp"
                ohos:scale_mode="stretch"/>

            <!--名字-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:end_margin="20vp"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_name"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="10vp"/>

                <Text
                    ohos:id="$+id:dtl_mdc_name"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="10vp"

                    ohos:end_margin="10vp"
                    ohos:multiple_lines="true"
                    ohos:text="药名药名药名药名药名药名药名药名"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="18fp"
                    ohos:text_weight="500"
                    ohos:top_margin="15vp"/>
            </DirectionalLayout>
            <!--描述-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:end_margin="20vp"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_desp"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <Text
                    ohos:id="$+id:dtl_mdc_desp"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="10vp"

                    ohos:end_margin="20vp"
                    ohos:multiple_lines="true"
                    ohos:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:top_margin="15vp"/>
            </DirectionalLayout>
            <!--标签-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:end_margin="20vp"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_elabel"
                    ohos:end_margin="5vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="left|vertical_center"
                    ohos:orientation="vertical">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:alignment="left|vertical_center"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:dtl_mdc_elabel1"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_normal"
                            ohos:bottom_margin="5vp"
                            ohos:bottom_padding="3vp"

                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="随便啦啦啦"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"
                            ohos:visibility="hide"/>

                        <Text
                            ohos:id="$+id:dtl_mdc_elabel2"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_normal"
                            ohos:bottom_margin="5vp"
                            ohos:bottom_padding="3vp"

                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="随便恩"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"

                            ohos:visibility="hide"/>

                        <Text
                            ohos:id="$+id:dtl_mdc_elabel3"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_normal"
                            ohos:bottom_margin="5vp"
                            ohos:bottom_padding="3vp"
                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="随便"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"
                            ohos:visibility="hide"/>

<!--                        <Text
                            ohos:id="$+id:dtl_mdc_elabel_add1"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_add"
                            ohos:bottom_margin="5vp"
                            ohos:bottom_padding="3vp"

                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="+"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"
                            ohos:visibility="hide"/>-->
                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:alignment="left|vertical_center"
                        ohos:bottom_margin="5vp"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:dtl_mdc_elabel4"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_normal"
                            ohos:bottom_margin="10vp"
                            ohos:bottom_padding="3vp"

                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="随便"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"
                            ohos:visibility="hide"/>

                        <Text
                            ohos:id="$+id:dtl_mdc_elabel5"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_normal"
                            ohos:bottom_margin="10vp"
                            ohos:bottom_padding="3vp"

                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="随便"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"
                            ohos:visibility="hide"/>

<!--                        <Text
                            ohos:id="$+id:dtl_mdc_elabel_add2"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:background_element="$graphic:bg_dtl_elabel_add"
                            ohos:bottom_margin="5vp"
                            ohos:bottom_padding="3vp"
                            ohos:end_margin="10vp"
                            ohos:end_padding="10vp"
                            ohos:start_padding="10vp"
                            ohos:text="+"
                            ohos:text_alignment="horizontal_center|vertical_center"
                            ohos:text_color="$color:white"
                            ohos:text_size="14fp"
                            ohos:text_weight="500"
                            ohos:top_margin="15vp"
                            ohos:top_padding="3vp"
                            ohos:visibility="hide"/>-->
                    </DirectionalLayout>
                </DirectionalLayout>


            </DirectionalLayout>
            <!--过期时间-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_outdate"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="vertical_center|left"
                    ohos:orientation="vertical">

                    <Text
                        ohos:id="$+id:dtl_mdc_outdate"
                        ohos:height="match_content"
                        ohos:width="match_parent"

                        ohos:end_margin="10vp"
                        ohos:max_width="230vp"
                        ohos:multiple_lines="true"
                        ohos:scrollable="true"
                        ohos:start_margin="5vp"
                        ohos:text="距过期还有 1999 天"
                        ohos:text_alignment="left|vertical_center"
                        ohos:text_color="$color:black_clear"
                        ohos:text_size="14fp"
                        ohos:text_weight="500"
                        ohos:top_margin="10vp"/>

                    <Text
                        ohos:id="$+id:dtl_mdc_outdate_day"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:bottom_margin="10vp"

                        ohos:end_margin="10vp"
                        ohos:max_width="230vp"
                        ohos:multiple_lines="true"
                        ohos:scrollable="true"
                        ohos:start_margin="5vp"
                        ohos:text="距过期还有 1999 天"
                        ohos:text_alignment="left|vertical_center"
                        ohos:text_color="$color:black_clear"
                        ohos:text_size="14fp"
                        ohos:text_weight="500"/>
                </DirectionalLayout>

            </DirectionalLayout>
            <!--otc-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_otc"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <Text
                    ohos:id="$+id:dtl_mdc_otc"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:bg_text_otc_otc_green"
                    ohos:bottom_margin="10vp"

                    ohos:end_margin="10vp"
                    ohos:end_padding="10vp"
                    ohos:max_width="230vp"
                    ohos:multiple_lines="true"
                    ohos:scrollable="true"
                    ohos:start_padding="10vp"
                    ohos:text="OTC (非处方药)"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:white"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:top_margin="20vp"/>


            </DirectionalLayout>
            <!--条码-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_barcode"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="left|vertical_center"
                    ohos:orientation="vertical">

                    <Text
                        ohos:id="$+id:dtl_mdc_barcode"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:bottom_margin="2vp"
                        ohos:end_margin="10vp"
                        ohos:max_width="230vp"
                        ohos:multiple_lines="true"
                        ohos:scrollable="true"
                        ohos:text="123456789012"
                        ohos:text_alignment="left|vertical_center"
                        ohos:text_color="$color:black_clear"
                        ohos:text_size="14fp"
                        ohos:text_weight="500"
                        ohos:top_margin="15vp"/>

                    <Image
                        ohos:id="$+id:dtl_mdc_barcode_img"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$color:white"
                        ohos:scale_mode="stretch"
                        ohos:top_margin="10vp"/>
                </DirectionalLayout>

            </DirectionalLayout>
            <!--用量-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_usage"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <Text
                    ohos:id="$+id:dtl_mdc_usage"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="10vp"

                    ohos:end_margin="10vp"
                    ohos:max_width="230vp"
                    ohos:multiple_lines="true"
                    ohos:scrollable="true"
                    ohos:text="1包/3次/天"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:top_margin="20vp"/>
            </DirectionalLayout>
            <!--余量-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_yu"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <Text
                    ohos:id="$+id:dtl_mdc_yu"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="10vp"

                    ohos:end_margin="10vp"
                    ohos:max_width="230vp"
                    ohos:multiple_lines="true"
                    ohos:scrollable="true"
                    ohos:text="剩余 9999 包"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:top_margin="15vp"/>

            </DirectionalLayout>
            <!--公司-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_company"
                    ohos:end_margin="10vp"
                    ohos:start_margin="15vp"
                    ohos:top_margin="15vp"/>

                <Text
                    ohos:id="$+id:dtl_mdc_company"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="10vp"
                    ohos:end_margin="10vp"
                    ohos:max_width="230vp"
                    ohos:multiple_lines="true"
                    ohos:scrollable="true"
                    ohos:text="大老板大老板大老板大老板有限集团公司"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:top_margin="20vp"/>


            </DirectionalLayout>

        </DirectionalLayout>
    </ScrollView>


</DirectionalLayout>