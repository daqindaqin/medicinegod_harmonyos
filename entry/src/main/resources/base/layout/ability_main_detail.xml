                                                    ohos:visibility="hide"/>-->
                    </DirectionalLayout>
                </DirectionalLayout>


            </DirectionalLayout>
            <!--过期时间-->
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="left|top|vertical_center"
                ohos:orientation="horizontal">

                <Text
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_mdc_outdate"
                    ohos:end_margin="10vp"
