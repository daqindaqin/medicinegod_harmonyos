<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="280vp"
    ohos:background_element="$graphic:bg_list_item_card"
    ohos:bottom_padding="10vp"
    ohos:margin="5vp"
    ohos:shadow_color="$color:purple_clear"
    >

    <DependentLayout
        ohos:id="$+id:style_default"
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:layout_alignment="vertical_center|horizontal_center">
        <Image
            ohos:id="$+id:style_default_image_png"
            ohos:height="157.5vp"
            ohos:width="280vp"
            ohos:image_src="$media:test"
            ohos:scale_mode="stretch"
            ohos:below="$id:style_default"
            />

        <Text
            ohos:id="$+id:style_default_text_name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="药品名字最多显示十字"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black"
            ohos:text_size="22vp"
            ohos:text_weight="700"
            ohos:top_margin="15vp"
            ohos:start_margin="10vp"
            ohos:below="$id:style_default_image_png"/>

        <Text
            ohos:id="$+id:style_default_text_otc"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_end="$id:style_default_text_name"
            ohos:background_element="$graphic:bg_text_otc_otc_green_default"
            ohos:below="$id:style_default"
            ohos:bottom_padding="5vp"
            ohos:end_padding="15vp"
            ohos:start_padding="15vp"
            ohos:text="OTC"
            ohos:text_alignment="center"
            ohos:text_color="$color:white"
            ohos:text_size="14fp"
            ohos:text_weight="700"
            ohos:top_padding="3vp"
            />

        <Text
            ohos:id="$+id:style_default_text_outdate"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_start="$id:style_default"
            ohos:background_element="$graphic:bg_text_outdate_green_default"
            ohos:below="$id:style_default"
            ohos:bottom_padding="5vp"
            ohos:end_padding="15vp"
            ohos:start_padding="15vp"
            ohos:text="正常使用"
            ohos:text_alignment="center"
            ohos:text_color="$color:white"
            ohos:text_size="14fp"
            ohos:text_weight="700"
            ohos:top_padding="3vp"
            />



        <Text
            ohos:id="$+id:style_default_text_usage"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:style_default_text_name"
            ohos:align_bottom="$id:style_default"
            ohos:start_margin="10vp"
            ohos:top_margin="10vp"
            ohos:text="3片/3次/天"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_line"
            ohos:text_size="14vp"
            ohos:text_weight="500"
            />
    </DependentLayout>


</DirectionalLayout>
