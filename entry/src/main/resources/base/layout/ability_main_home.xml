<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:alignment="top"
    ohos:background_element="$color:white">

        <DirectionalLayout
            ohos:id="$+id:head_of_top"
            ohos:height="85fp"
            ohos:width="match_parent"
            ohos:alignment="left"
            ohos:orientation="horizontal">
                <Image
                    ohos:id="$+id:image_head"
                    ohos:height="45vp"
                    ohos:width="45vp"
                    ohos:scale_mode="stretch"
                    ohos:text_color="#FFFFFF"
                    ohos:image_src="$media:head"
                    ohos:top_margin="20vp"
                    ohos:start_margin="20vp"
                    ohos:end_margin="5vp"
                    ohos:bottom_margin="20vp"

                    />

                <TextField
                    ohos:height="40fp"
                    ohos:width="match_parent"
                    ohos:hint="哈哈哈"
                    ohos:text_size="14fp"
                    ohos:text_alignment="left"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left|vertical_center"
                    ohos:background_element="$graphic:background_textfield_search"
                    ohos:element_left="$media:search"
                    ohos:element_padding="5vp"
                    ohos:padding="10vp"
                    ohos:margin="20vp"/>
        </DirectionalLayout>

        <ListContainer
            ohos:id="$+id:list"
            ohos:height="200vp"
            ohos:width="match_parent"
            ohos:rebound_effect="true"
            ohos:layout_alignment="horizontal_center"
            ohos:below="$id:head_of_top"
            />


</DependentLayout>