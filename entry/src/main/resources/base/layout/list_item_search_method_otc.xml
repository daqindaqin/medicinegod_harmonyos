<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="left|vertical_center"
    ohos:margin="5vp"
    ohos:top_padding="10vp"
    ohos:bottom_padding="10vp"
    ohos:background_element="$graphic:bg_list_item_search_method"

    >
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="left|vertical_center">
        <Image
            ohos:id="$+id:srced_image_png"
            ohos:height="45vp"
            ohos:width="80vp"
            ohos:start_margin="10vp"
            ohos:end_margin="10vp"
            ohos:image_src="$media:test"
            ohos:scale_mode="stretch"
            />
        <Text
            ohos:id="$+id:srced_name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="一二三四五六七八九十胶囊"
            ohos:text_size="24fp"
            ohos:text_color="$color:black_clear"
            ohos:text_weight="700"
            ohos:start_margin="5vp"
            ohos:end_margin="10vp"
            ohos:top_margin="10vp"
            ohos:bottom_margin="10vp"
            ohos:scrollable="true"
            ohos:text_alignment="left"
            />
    </DirectionalLayout>
    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:top_margin="5vp"
        ohos:start_margin="10vp"
        ohos:end_margin="10vp"
        ohos:background_element="$color:black_line"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:start_margin="10vp"
        ohos:end_margin="10vp"
        ohos:alignment="vertical_center"
        >
        <Text
            ohos:id="$+id:srced_otc"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_text_otc_otc_green_one"
            ohos:bottom_margin="10vp"

            ohos:end_margin="10vp"
            ohos:end_padding="10vp"
            ohos:max_width="230vp"
            ohos:multiple_lines="true"
            ohos:scrollable="true"
            ohos:start_padding="10vp"
            ohos:text=""
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:white"
            ohos:text_size="14fp"
            ohos:text_weight="500"
            ohos:top_margin="20vp"
            ohos:visibility="hide"/>
        <Text
            ohos:id="$+id:srced_otcdesp"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text=""
            ohos:text_size="16fp"
            ohos:text_color="$color:black_clear"
            ohos:text_weight="300"
            ohos:start_margin="10vp"
            ohos:end_margin="10vp"
            ohos:top_margin="5vp"
            ohos:bottom_margin="10vp"
            ohos:multiple_lines="true"
            ohos:text_alignment="left"

            />
    </DirectionalLayout>



</DirectionalLayout>
