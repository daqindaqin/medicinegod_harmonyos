<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="250vp"
    ohos:background_element="$graphic:bg_round"
    ohos:orientation="vertical"
    ohos:padding="20vp">

    <Text
        ohos:id="$+id:tv_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="标题"
        ohos:text_weight="700"
        ohos:text_alignment="center"
        ohos:text_color="$color:black"
        ohos:text_size="20fp"/>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="$color:black_line"
        ohos:bottom_margin="10vp"
        ohos:top_margin="10vp"/>

    <Text
        ohos:id="$+id:tv_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="16vp"
        ohos:multiple_lines="true"
        ohos:text=""
        ohos:text_color="$color:black_clear"
        ohos:text_weight="300"
        ohos:text_size="16fp"
        ohos:top_margin="10vp"/>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="$color:black_line"
        ohos:bottom_margin="10vp"
        ohos:top_margin="10vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center|horizontal_center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:tv_cancel"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:bottom_margin="10vp"
            ohos:right_margin="20vp"
            ohos:text="返回"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:text_color="$color:black_clear"
            ohos:top_margin="10vp"
            ohos:text_weight="700"
            ohos:weight="1"/>


        <Text
            ohos:id="$+id:tv_confirm"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:bottom_margin="10vp"
            ohos:text_color="$color:blue"
            ohos:text="确认"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"
            ohos:text_weight="700"
            ohos:weight="1"/>

    </DirectionalLayout>

</DirectionalLayout>