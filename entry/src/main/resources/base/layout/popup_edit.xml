<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#45000000">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="top"
        ohos:background_element="$graphic:bg_round"
        ohos:bottom_margin="50vp"
        ohos:orientation="vertical"
        ohos:top_margin="50vp">
        <!--顶部-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="left|vertical_center"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:dtl_edit_back"
                ohos:height="50vp"
                ohos:width="45vp"
                ohos:background_element="$graphic:ic_dtl_mdc_back"
                ohos:start_margin="20vp"
                ohos:top_margin="15vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:bottom_margin="20vp"
                ohos:end_margin="10vp"
                ohos:start_margin="-10vp"
                ohos:text="返回"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="700"
                ohos:top_margin="20vp"/>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="right|vertical_center"
                ohos:end_margin="10vp"
                ohos:orientation="horizontal"
                ohos:start_margin="10vp">

                <Text
                    ohos:id="$+id:dtl_edit_editok"
                    ohos:height="35vp"
                    ohos:width="35vp"
                    ohos:background_element="$graphic:ic_dtl_edit_editok"
                    ohos:margin="15vp"/>
            </DirectionalLayout>
        </DirectionalLayout>
        <Component
            ohos:height="2vp"
            ohos:width="match_parent"
            ohos:background_element="$color:black_line"/>

        <!--图像-->
        <Image
            ohos:id="$+id:dtl_edit_img"
            ohos:height="180vp"
            ohos:width="320vp"
            ohos:background_element="$color:white"
            ohos:image_src="$media:test"
            ohos:margin="20vp"
            ohos:scale_mode="stretch"/>
        <!--name-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品名"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品名"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--description-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品描述"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_desp"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的详细描述"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--outdate-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品过期时间"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_outdate"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的过期时间"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--otc-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品标识"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_otc"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的类别标识"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--barcode-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品13位条形码"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_barcode"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的类别标识"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_input_type="pattern_number"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--usage-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品用量"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_usage"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的用量"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--yu-->
        <Text
            ohos:id="$+id:dtl_edit_yu_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品余量(单位：包)"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_yu"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的余量"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--company-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品公司"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_company"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="5vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的公司"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>
        <!--company-->
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="药品标签"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="500"/>
        <TextField
            ohos:id="$+id:dtl_edit_elabel"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:basement="$color:orange_clear"
            ohos:bottom_margin="100vp"
            ohos:end_margin="10vp"
            ohos:end_padding="15vp"
            ohos:hint="药品的标签"
            ohos:multiple_lines="true"
            ohos:start_margin="10vp"
            ohos:start_padding="20vp"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:black_clear"
            ohos:text_size="20fp"
            ohos:text_weight="300"/>

    </DirectionalLayout>

</ScrollView>