<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top|horizontal_center"
    ohos:orientation="vertical"
    ohos:background_element="$color:white">

        <Text
            ohos:id="$+id:chat_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="信 息"
            ohos:text_size="24fp"
            ohos:top_padding="20vp"
            ohos:bottom_padding="20vp"
            ohos:text_color="$color:black_clear"
            ohos:text_weight="700"
            ohos:text_alignment="vertical_center|horizontal_center"/>
        <Image
            ohos:id="$+id:chat_line0"
            ohos:below="$id:chat_title"
            ohos:height="3"
            ohos:width="match_parent"
            ohos:background_element="$color:black_line"
            ohos:bottom_margin="5vp"/>

        <ScrollView
            ohos:id="$+id:chat_scrollview"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:below="$id:chat_line0"
            ohos:rebound_effect="true">

                <DirectionalLayout
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:margin="10vp"
                    ohos:orientation="vertical"
                    >
                        <!--显示好友信息-->
                        <DirectionalLayout
                            ohos:id="$+id:chat_friend"
                            ohos:height="match_content"
                            ohos:width="match_parent"
                            ohos:background_element="$graphic:bg_chat_moudle_background"
                            ohos:below="$id:chat_line0"
                            ohos:margin="10vp"
                            ohos:orientation="vertical">

                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:alignment="horizontal_center|left"
                                    ohos:orientation="horizontal"
                                    >

                                        <Text
                                            ohos:height="match_content"
                                            ohos:width="match_content"
                                            ohos:margin="10vp"
                                            ohos:text="你的好友"
                                            ohos:text_alignment="left"
                                            ohos:text_color="$color:black_clear"
                                            ohos:text_size="20fp"
                                            ohos:text_weight="500"/>

                                        <Text
                                            ohos:height="match_content"
                                            ohos:width="match_parent"
                                            ohos:margin="10vp"
                                            ohos:text="查看更多>"
                                            ohos:text_alignment="right"
                                            ohos:text_color="$color:black_clear"
                                            ohos:text_size="20fp"
                                            ohos:text_weight="500"/>
                                </DirectionalLayout>

                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:alignment="horizontal_center|left"
                                    ohos:orientation="horizontal"
                                    ohos:start_padding="15vp">


                                        <Image
                                            ohos:height="45vp"
                                            ohos:width="45vp"
                                            ohos:background_element="$color:orange"
                                            ohos:margin="10vp"
                                            ohos:scale_mode="stretch"/>

                                        <Image
                                            ohos:height="45vp"
                                            ohos:width="45vp"
                                            ohos:background_element="$color:orange"
                                            ohos:margin="10vp"
                                            ohos:scale_mode="stretch"/>

                                        <Image
                                            ohos:height="45vp"
                                            ohos:width="45vp"
                                            ohos:background_element="$color:orange"
                                            ohos:margin="10vp"
                                            ohos:scale_mode="stretch"/>

                                        <Image
                                            ohos:height="45vp"
                                            ohos:width="45vp"
                                            ohos:background_element="$color:orange"
                                            ohos:margin="10vp"
                                            ohos:scale_mode="stretch"/>
                                </DirectionalLayout>
                        </DirectionalLayout>
                        <!--显示聊天信息-->
                        <DirectionalLayout
                            ohos:id="$+id:chat_chat"
                            ohos:height="match_content"
                            ohos:width="match_parent"
                            ohos:background_element="$graphic:bg_chat_moudle_background"
                            ohos:below="$id:chat_line0"
                            ohos:margin="10vp"
                            ohos:orientation="vertical">

                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:alignment="horizontal_center|left"
                                    ohos:orientation="horizontal"
                                    >

                                        <Text
                                            ohos:height="match_content"
                                            ohos:width="match_content"
                                            ohos:margin="10vp"
                                            ohos:text="聊天内容"
                                            ohos:text_alignment="left"
                                            ohos:text_color="$color:black_clear"
                                            ohos:text_size="20fp"
                                            ohos:text_weight="500"/>
                                </DirectionalLayout>

                                <ListContainer
                                    ohos:id="$+id:chat_chatlist"
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:layout_alignment="horizontal_center"
                                    ohos:margin="10vp"
                                    />
                        </DirectionalLayout>
                </DirectionalLayout>
        </ScrollView>





</DependentLayout>