<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:background_element="$color:blue"
    ohos:padding="20vp"
    >

    <!--头部信息-->
    <Text
        ohos:id="$+id:add_title"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:component_description="导入药品"
        ohos:layout_alignment="left|vertical_center"
        ohos:text="添加新的药品数据"
        ohos:text_alignment="left"
        ohos:text_color="$color:white"
        ohos:text_size="28fp"
        ohos:text_weight="700"
        ohos:top_margin="20vp"
        />
    <Button
        ohos:id="$+id:add_clear"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:element_top="$media:add_clear"
        ohos:right_of="$id:add_title"
        ohos:start_margin="10vp"
        ohos:text="清空"
        ohos:text_color="$color:white"
        ohos:text_size="14fp"
        ohos:text_weight="500"
        ohos:top_margin="20vp"
        />
    <Button
        ohos:id="$+id:add_import"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:element_top="$media:add_import"
        ohos:right_of="$id:add_clear"
        ohos:start_margin="-10vp"
        ohos:text="导入"
        ohos:text_color="$color:white"
        ohos:text_size="14fp"
        ohos:text_weight="500"
        ohos:top_margin="20vp"
        />

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:below="$id:add_title"
        ohos:background_element="$graphic:background_add_dependlayout"
        ohos:bottom_margin="20vp"
        ohos:end_margin="5vp"
        ohos:start_margin="5vp"
        ohos:rebound_effect="true"
        ohos:top_margin="40vp"
        >
        <!--填写的内容-->
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            >

            <!-- 药品名字布局 -->
            <TextField
                ohos:id="$+id:add_newName"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:hint="新药品名字"
                ohos:layout_alignment="left|vertical_center"
                ohos:margin="20vp"
                ohos:max_text_lines="1"
                ohos:text_alignment="left"
                ohos:text_color="$color:black"
                ohos:text_size="28fp"
                ohos:text_weight="500"
                />
            <Image
                ohos:id="$+id:add_line1"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newName"
                />

            <!--图片详情-->
            <Image
                ohos:id="$+id:add_newImg"
                ohos:height="180vp"
                ohos:width="320vp"
                ohos:min_height="180vp"
                ohos:min_width="320vp"
                ohos:max_height="180vp"
                ohos:max_width="320vp"
                ohos:background_element="$color:blue"
                ohos:below="$id:add_line1"
                ohos:image_src="$media:add_imgadd"
                ohos:margin="2vp"
                ohos:scale_mode="center"
                />
            <Image
                ohos:id="$+id:add_line2"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newImg"
                />

            <!-- 药品描述布局 -->
            <Text
                ohos:id="$+id:add_newDescription_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_line2"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="药品描述"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <TextField
                ohos:id="$+id:add_newDescription"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_newDescription_title"
                ohos:bottom_margin="20vp"
                ohos:hint="新药品的描述"
                ohos:layout_alignment="left|vertical_center"
                ohos:multiple_lines="true"
                ohos:start_margin="20vp"
                ohos:text_alignment="left"
                ohos:text_color="$color:black"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                />
            <Image
                ohos:id="$+id:add_line3"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newDescription"
                />

            <!-- 时间选择器布局 -->
            <Text
                ohos:id="$+id:add_newOutdate_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_line3"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="过期时间"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <Picker
                ohos:id="$+id:add_newOutdate_year"
                ohos:height="match_content"
                ohos:width="100vp"
                ohos:below="$id:add_newOutdate_title"
                ohos:margin="10vp"
                ohos:selected_text_size="20fp"
                ohos:selector_item_num="3"
                ohos:start_margin="30vp"
                ohos:wheel_mode_enabled="true"
                />
            <Picker
                ohos:id="$+id:add_newOutdate_month"
                ohos:height="match_content"
                ohos:width="100vp"
                ohos:below="$id:add_newOutdate_title"
                ohos:margin="10vp"
                ohos:max_value="11"
                ohos:right_of="$id:add_newOutdate_year"
                ohos:selected_text_size="20fp"
                ohos:selector_item_num="3"
                ohos:wheel_mode_enabled="true"
                />
            <Image
                ohos:id="$+id:add_line4"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newOutdate_month"
                />

            <!-- 药品OTC标识布局 -->
            <Text
                ohos:id="$+id:add_newOtc_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:add_line4"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="OTC标识"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <Text
                ohos:id="$+id:add_newOtc_question"
                ohos:height="15vp"
                ohos:width="15vp"
                ohos:align_top="$id:add_newOtc_title"
                ohos:background_element="$graphic:background_add_newOtc_question"
                ohos:right_of="$id:add_newOtc_title"
                ohos:start_margin="10vp"
                ohos:start_padding="4vp"
                ohos:text="？"
                ohos:text_alignment="vertical_center|horizontal_center"
                ohos:text_color="$color:white"
                ohos:text_size="10fp"
                ohos:text_weight="700"
                />
            <Picker
                ohos:id="$+id:add_newOtc"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_newOtc_title"
                ohos:bottom_margin="10vp"
                ohos:max_value="2"
                ohos:selected_text_size="20fp"
                ohos:selector_item_num="3"
                ohos:wheel_mode_enabled="false"
                />
            <Image
                ohos:id="$+id:add_line5"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newOtc"
                />

            <!-- 药品barCode布局 -->
            <Text
                ohos:id="$+id:add_newbarCode_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:add_line5"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="13位条形码"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <TextField
                ohos:id="$+id:add_newbarCode"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_newbarCode_title"
                ohos:bottom_margin="20vp"
                ohos:hint="药盒侧面的13位条形码"
                ohos:layout_alignment="left|vertical_center"
                ohos:max_text_lines="1"
                ohos:start_margin="20vp"
                ohos:text_alignment="left"
                ohos:text_color="$color:black"
                ohos:text_input_type="pattern_number"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                />
            <Image
                ohos:id="$+id:add_line6"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newbarCode"
                />


            <!-- 药品用法用量布局 -->
            <Text
                ohos:id="$+id:add_newUsage_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:add_line6"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="用法用量"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <TextField
                ohos:id="$+id:add_newUsage_1"
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:below="$+id:add_newUsage_title"
                ohos:hint="数量"
                ohos:margin="20vp"
                ohos:max_text_lines="1"
                ohos:text_alignment="center|horizontal_center"
                ohos:text_input_type="pattern_number"
                ohos:text_size="18fp"
                />
            <Text
                ohos:id="$+id:add_newUsage_utils_1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:align_top="$id:add_newUsage_1"
                ohos:background_element="$graphic:background_add_useage_util"
                ohos:padding="3vp"
                ohos:right_of="$+id:add_newUsage_1"
                ohos:text="包"
                ohos:text_color="$color:white"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                />
            <TextField
                ohos:id="$+id:add_newUsage_2"
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:align_top="$id:add_newUsage_utils_1"
                ohos:below="$+id:add_newUsage_title"
                ohos:hint="天次"
                ohos:max_text_lines="1"
                ohos:right_of="$id:add_newUsage_utils_1"
                ohos:text_alignment="center|horizontal_center"
                ohos:text_input_type="pattern_number"
                ohos:text_size="18fp"
                />
            <Text
                ohos:id="$+id:add_newUsage_utils_2"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:align_top="$+id:add_newUsage_2"
                ohos:right_of="$+id:add_newUsage_2"

                ohos:background_element="$graphic:background_add_useage_util"
                ohos:padding="3vp"
                ohos:text="天"
                ohos:text_color="$color:white"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                />
            <Image
                ohos:id="$+id:add_line7"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newUsage_1"
                />


            <!-- 药品公司布局 -->
            <Text
                ohos:id="$+id:add_newCompany_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:add_line7"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="制药公司"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <TextField
                ohos:id="$+id:add_newCompany"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_newCompany_title"
                ohos:bottom_margin="20vp"
                ohos:hint="新药品的制药公司"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text_alignment="left"
                ohos:text_color="$color:black"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                />
            <Image
                ohos:id="$+id:add_line8"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newCompany"
                />

            <!-- 药品余量布局 -->
            <Text
                ohos:id="$+id:add_newYu_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:add_line8"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="剩余余量(单位:包)"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <Picker
                ohos:id="$+id:add_newYu"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_newYu_title"
                ohos:bottom_margin="10vp"
                ohos:max_value="9"
                ohos:selected_text_size="20fp"
                ohos:selector_item_num="3"
                ohos:wheel_mode_enabled="true"
                />
            <Image
                ohos:id="$+id:add_line9"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$id:add_newYu"
                />

            <!-- 药品标签布局 -->
            <Text
                ohos:id="$+id:add_newLabel_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:add_line9"
                ohos:bottom_margin="10vp"
                ohos:layout_alignment="left|vertical_center"
                ohos:start_margin="20vp"
                ohos:text="添加药效标签"
                ohos:text_alignment="left"
                ohos:text_color="$color:black_clear"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                ohos:top_margin="20vp"
                />
            <!--添加标签的布局-->
            <DirectionalLayout
                ohos:id="$+id:add_addNewlabel_DirectionalLayout"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:padding="5vp"
                ohos:alignment="vertical_center|horizontal_center"
                ohos:below="$+id:add_newLabel_title">
                <TextField
                    ohos:id="$+id:add_newLabel_addTextFiled"
                    ohos:height="match_content"
                    ohos:width="150vp"
                    ohos:hint="  请填写相关标签  "
                    ohos:top_margin="5vp"
                    ohos:bottom_margin="5vp"
                    ohos:start_margin="10vp"
                    ohos:end_margin="10vp"
                    ohos:padding="10vp"
                    ohos:text_alignment="horizontal_center|vertical_center"
                    ohos:background_element="$graphic:background_add_Newlabel_addtextfield"
                    ohos:text_color="$color:black"
                    ohos:max_text_lines="1"
                    ohos:text_size="16fp"
                    ohos:text_weight="500"/>
                <Button
                    ohos:id="$+id:add_newLabel_addButton"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_add_newlabel_addbtn"
                    ohos:top_margin="5vp"
                    ohos:bottom_margin="5vp"
                    ohos:start_margin="10vp"
                    ohos:end_margin="10vp"
                    ohos:padding="10vp"
                    ohos:text=" 添 加 "
                    ohos:text_color="$color:white"
                    ohos:text_size="16fp"
                    ohos:text_weight="500"
                    />
            </DirectionalLayout>
            <!--标签显示的布局-->
            <DirectionalLayout
                ohos:id="$+id:add_addNewlabel_labellayout"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:alignment="top"
                ohos:below="$+id:add_addNewlabel_DirectionalLayout"
                ohos:background_element="$color:blue_clear">
<!--                <com.daqin.medicinegod.FlowLayout-->
<!--                    ohos:id="$+id:flow_layout"-->
<!--                    ohos:height="match_content"-->
<!--                    ohos:width="match_parent"-->
<!--                    ohos:layout_alignment="top"-->
<!--                    ohos:below="$+id:add_addNewlabel_labellayout">-->
<!--                </com.daqin.medicinegod.FlowLayout>-->
            </DirectionalLayout>

            <Image
                ohos:id="$+id:add_line10"
                ohos:height="2vp"
                ohos:width="match_parent"
                ohos:background_element="$color:black_line"
                ohos:below="$+id:add_addNewlabel_labellayout"
                />

            <!-- 药品填写完成布局 -->
            <Button
                ohos:id="$+id:add_addOk"
                ohos:height="45fp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_add_addok"
                ohos:below="$+id:add_line10"
                ohos:margin="25vp"
                ohos:text="填写完成"
                ohos:text_color="$color:white"
                ohos:text_size="18fp"
                ohos:text_weight="500"
                />

                </DependentLayout>

    </ScrollView>


</DependentLayout>