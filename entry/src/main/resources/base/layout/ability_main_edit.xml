<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="left|vertical_center"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:dtl_edit_back"
            ohos:height="50vp"
            ohos:width="45vp"
            ohos:background_element="$graphic:ic_dtl_mdc_back"
            ohos:start_margin="20vp"
            ohos:top_margin="15vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="20vp"
            ohos:end_margin="10vp"
            ohos:start_margin="-10vp"
            ohos:text="返回"
            ohos:text_alignment="left"
            ohos:text_color="$color:black_clear"
            ohos:text_size="26fp"
            ohos:text_weight="700"
            ohos:top_margin="20vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="right|vertical_center"
            ohos:end_margin="10vp"
            ohos:orientation="horizontal"
            ohos:start_margin="10vp">

            <Text
                ohos:id="$+id:dtl_edit_editok"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:background_element="$graphic:ic_dtl_edit_editok"
                ohos:margin="15vp"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <Component
        ohos:height="2vp"
        ohos:width="match_parent"
        ohos:background_element="$color:black_line"/>
    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$color:white"
        ohos:bottom_margin="50vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="top"
            ohos:bottom_margin="100vp"
            ohos:orientation="vertical">
            <!--顶部-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="(填写即表示修改，否则无影响)"
                ohos:text_alignment="vertical_center|horizontal_center"
                ohos:text_color="$color:black_line"
                ohos:text_size="14fp"
                ohos:text_weight="700"
                ohos:top_margin="10vp"
                />
            <!--图像-->
            <Image
                ohos:id="$+id:dtl_edit_img"
                ohos:height="180vp"
                ohos:width="320vp"
                ohos:background_element="$color:white"
                ohos:image_src="$media:test"
                ohos:margin="20vp"
                ohos:scale_mode="stretch"/>
            <!--name-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品名"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <TextField
                ohos:id="$+id:dtl_edit_name"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:basement="$color:orange_clear"
                ohos:bottom_margin="5vp"
                ohos:end_margin="10vp"
                ohos:end_padding="15vp"
                ohos:hint="药品名"
                ohos:multiple_lines="true"
                ohos:start_margin="10vp"
                ohos:start_padding="20vp"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="300"/>
            <!--description-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品描述"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <TextField
                ohos:id="$+id:dtl_edit_desp"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:basement="$color:orange_clear"
                ohos:bottom_margin="5vp"
                ohos:end_margin="10vp"
                ohos:end_padding="15vp"
                ohos:hint="药品的详细描述"
                ohos:multiple_lines="true"
                ohos:start_margin="10vp"
                ohos:start_padding="20vp"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="300"/>
            <!--outdate-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品过期时间"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:alignment="left|vertical_center">
                <Picker
                    ohos:id="$+id:dtl_edit_newOutdate_year"
                    ohos:height="match_content"
                    ohos:width="100vp"
                    ohos:below="$id:add_newOutdate_title"
                    ohos:margin="10vp"
                    ohos:selected_text_size="20fp"
                    ohos:selected_text_color="$color:blue"
                    ohos:selector_item_num="3"
                    ohos:start_margin="30vp"
                    ohos:wheel_mode_enabled="true"
                    />
                <Picker
                    ohos:id="$+id:dtl_edit_newOutdate_month"
                    ohos:height="match_content"
                    ohos:width="100vp"
                    ohos:below="$id:add_newOutdate_title"
                    ohos:margin="10vp"
                    ohos:max_value="11"
                    ohos:right_of="$id:add_newOutdate_year"
                    ohos:selected_text_color="$color:blue"
                    ohos:selected_text_size="20fp"
                    ohos:selector_item_num="3"
                    ohos:wheel_mode_enabled="true"
                    />
            </DirectionalLayout>
            <!--otc-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品标识"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <Picker
                ohos:id="$+id:dtl_edit_newOtc"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:add_newOtc_title"
                ohos:bottom_margin="10vp"
                ohos:selected_text_color="$color:blue"
                ohos:max_value="3"
                ohos:selected_text_size="20fp"
                ohos:selector_item_num="3"
                ohos:wheel_mode_enabled="false"
                />
            <!--barcode-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品13位条形码"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <TextField
                ohos:id="$+id:dtl_edit_barcode"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:basement="$color:orange_clear"
                ohos:bottom_margin="5vp"
                ohos:end_margin="10vp"
                ohos:end_padding="15vp"
                ohos:hint="药品的条码"
                ohos:multiple_lines="true"
                ohos:start_margin="10vp"
                ohos:start_padding="20vp"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_input_type="pattern_number"
                ohos:text_size="20fp"
                ohos:text_weight="300"/>
            <!--usage-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品用量"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:start_margin="30vp"
                ohos:alignment="left|vertical_center"
                ohos:orientation="horizontal">
                <TextField
                    ohos:id="$+id:dtl_edit_newUsage_1"
                    ohos:height="match_content"
                    ohos:width="40vp"
                    ohos:hint="数量"
                    ohos:margin="15vp"
                    ohos:max_text_lines="1"
                    ohos:text_alignment="center|horizontal_center"
                    ohos:text_input_type="pattern_number"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:id="$+id:dtl_edit_newUsage_utils_1"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:bg_add_useage_util"
                    ohos:padding="3vp"
                    ohos:text="包"
                    ohos:text_color="$color:white"
                    ohos:text_size="18fp"
                    ohos:text_weight="500"
                    />
                <TextField
                    ohos:id="$+id:dtl_edit_newUsage_2"
                    ohos:height="match_content"
                    ohos:width="40vp"
                    ohos:hint="次数"
                    ohos:margin="15vp"
                    ohos:max_text_lines="1"
                    ohos:text_alignment="center|horizontal_center"
                    ohos:text_input_type="pattern_number"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:id="$+id:dtl_edit_newUsage_utils_2"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:bg_add_useage_util"
                    ohos:padding="3vp"
                    ohos:text="次"
                    ohos:text_color="$color:white"
                    ohos:text_size="18fp"
                    ohos:text_weight="500"
                    />
                <TextField
                    ohos:id="$+id:dtl_edit_newUsage_3"
                    ohos:height="match_content"
                    ohos:width="40vp"
                    ohos:hint="天数"
                    ohos:margin="15vp"
                    ohos:max_text_lines="1"
                    ohos:text_alignment="center|horizontal_center"
                    ohos:text_input_type="pattern_number"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:id="$+id:dtl_edit_newUsage_utils_3"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:bg_add_useage_util"
                    ohos:padding="3vp"
                    ohos:text="天"
                    ohos:text_color="$color:white"
                    ohos:text_size="18fp"
                    ohos:text_weight="500"
                    />
            </DirectionalLayout>
            <!--yu-->
            <Text
                ohos:id="$+id:dtl_edit_yu_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品余量(单位：包)"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <TextField
                ohos:id="$+id:dtl_edit_yu"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:basement="$color:orange_clear"
                ohos:bottom_margin="5vp"
                ohos:end_margin="10vp"
                ohos:end_padding="15vp"
                ohos:hint="药品的余量"
                ohos:multiple_lines="true"
                ohos:start_margin="10vp"
                ohos:start_padding="20vp"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="300"/>
            <!--company-->
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品公司"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <TextField
                ohos:id="$+id:dtl_edit_company"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:basement="$color:orange_clear"
                ohos:bottom_margin="5vp"
                ohos:end_margin="10vp"
                ohos:end_padding="15vp"
                ohos:hint="药品的公司"
                ohos:multiple_lines="true"
                ohos:start_margin="10vp"
                ohos:start_padding="20vp"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="20fp"
                ohos:text_weight="300"/>
            <!--elabel-->
            <Text
                ohos:id="$+id:dtl_edit_elabel_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="10vp"
                ohos:padding="10vp"
                ohos:text="药品标签(5/5)"
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:black_clear"
                ohos:text_size="26fp"
                ohos:text_weight="500"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:alignment="top"
                ohos:start_padding="20vp"
                ohos:end_padding="10vp"
                ohos:bottom_margin="100vp">
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:alignment="left|vertical_center">
                    <Text
                        ohos:id="$+id:dtl_edit_elabel1"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_add_newLabel_label"
                        ohos:bottom_padding="5vp"
                        ohos:end_padding="10vp"
                        ohos:margin="5vp"
                        ohos:start_padding="10vp"
                        ohos:text="测试标签"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:top_padding="5vp"
                        ohos:visibility="hide"

                        />
                    <Text
                        ohos:id="$+id:dtl_edit_elabel2"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_add_newLabel_label"
                        ohos:bottom_padding="5vp"
                        ohos:end_padding="10vp"
                        ohos:margin="5vp"
                        ohos:start_padding="10vp"
                        ohos:text="测试标签"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:top_padding="5vp"
                        ohos:visibility="hide"

                        />
                    <Text
                        ohos:id="$+id:dtl_edit_elabel3"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_add_newLabel_label"
                        ohos:bottom_padding="5vp"
                        ohos:end_padding="10vp"
                        ohos:margin="5vp"
                        ohos:start_padding="10vp"
                        ohos:text="测试标签"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:top_padding="5vp"
                        ohos:visibility="hide"
                        />
                    <Text
                        ohos:id="$+id:dtl_edit_elabel_add1"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_dtl_elabel_add"
                        ohos:bottom_margin="5vp"
                        ohos:bottom_padding="3vp"
                        ohos:end_margin="10vp"
                        ohos:end_padding="10vp"
                        ohos:start_margin="10vp"
                        ohos:start_padding="10vp"
                        ohos:text="+"
                        ohos:text_alignment="horizontal_center|vertical_center"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:text_weight="500"
                        ohos:top_margin="5vp"
                        ohos:top_padding="3vp"
                        ohos:visibility="hide"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:alignment="left|vertical_center">
                    <Text
                        ohos:id="$+id:dtl_edit_elabel4"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_add_newLabel_label"
                        ohos:bottom_padding="5vp"
                        ohos:end_padding="10vp"
                        ohos:margin="5vp"
                        ohos:start_padding="10vp"
                        ohos:text="测试标签"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:top_padding="5vp"
                        ohos:visibility="hide"
                        />
                    <Text
                        ohos:id="$+id:dtl_edit_elabel5"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_add_newLabel_label"
                        ohos:bottom_padding="5vp"
                        ohos:end_padding="10vp"
                        ohos:margin="5vp"
                        ohos:start_padding="10vp"
                        ohos:text="测试标签"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:top_padding="5vp"
                        ohos:visibility="hide"
                        />
                    <Text
                        ohos:id="$+id:dtl_edit_elabel_add2"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:background_element="$graphic:bg_dtl_elabel_add"
                        ohos:bottom_margin="5vp"
                        ohos:bottom_padding="3vp"
                        ohos:start_margin="10vp"
                        ohos:end_margin="10vp"
                        ohos:end_padding="10vp"
                        ohos:start_padding="10vp"
                        ohos:text="+"
                        ohos:text_alignment="horizontal_center|vertical_center"
                        ohos:text_color="$color:white"
                        ohos:text_size="16fp"
                        ohos:text_weight="500"
                        ohos:top_margin="5vp"
                        ohos:top_padding="3vp"
                        ohos:visibility="hide"/>
                </DirectionalLayout>

            </DirectionalLayout>

        </DirectionalLayout>

    </ScrollView>
</DirectionalLayout>


