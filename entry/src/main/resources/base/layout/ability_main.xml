<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <PageSlider
        ohos:id="$+id:view_pager"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="1"/>

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        ohos:id="$+id:bottom_navigation_view_linear"
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:background_element="$color:white"
        ohos:orientation="horizontal"
        ohos:padding="16vp">

        <com.gauravk.bubblenavigation.BubbleToggleView
            ohos:id="$+id:l_item_homepage"
            ohos:height="match_content"
            ohos:width="match_content"
            app:bt_active="true"
            app:bt_colorActive="$color:red"
            app:bt_colorInactive="$color:red_clear"
            app:bt_icon="$graphic:ic_bottombar_homepage"
            app:bt_sel_icon="$graphic:ic_bottombar_homepage_select"
            app:bt_shape="$graphic:bg_bottombar_overall"
            app:bt_shapeRect="$graphic:bg_bottombar_homepage_activeshape"
            app:bt_title="主页"/>

        <com.gauravk.bubblenavigation.BubbleToggleView
            ohos:id="$+id:l_item_community"
            ohos:height="match_content"
            ohos:width="match_content"
            app:bt_colorActive="$color:blue"
            app:bt_colorInactive="$color:blue_clear"
            app:bt_icon="$graphic:ic_bottombar_community"
            app:bt_sel_icon="$graphic:ic_bottombar_community_select"
            app:bt_shape="$graphic:bg_bottombar_overall"
            app:bt_shapeRect="$graphic:bg_bottombar_community_activeshape"
            app:bt_title="社区"/>

        <com.gauravk.bubblenavigation.BubbleToggleView
            ohos:id="$+id:l_item_add"
            ohos:height="match_content"
            ohos:width="match_content"
            app:bt_colorActive="$color:orange"
            app:bt_colorInactive="$color:orange_clear"
            app:bt_icon="$graphic:ic_bottombar_add"
            app:bt_sel_icon="$graphic:ic_bottombar_add_select"
            app:bt_shape="$graphic:bg_bottombar_overall"
            app:bt_shapeRect="$graphic:bg_bottombar_add_activeshape"
            app:bt_title="添加"/>

        <com.gauravk.bubblenavigation.BubbleToggleView
            ohos:id="$+id:l_item_chat"
            ohos:height="match_content"
            ohos:width="match_content"
            app:bt_colorActive="$color:green"
            app:bt_colorInactive="$color:green_clear"
            app:bt_icon="$graphic:ic_bottombar_chat"
            app:bt_sel_icon="$graphic:ic_bottombar_chat_select"
            app:bt_shape="$graphic:bg_bottombar_overall"
            app:bt_shapeRect="$graphic:bg_bottombar_chat_activeshape"
            app:bt_title="信息"/>

        <com.gauravk.bubblenavigation.BubbleToggleView
            ohos:id="$+id:l_item_person"
            ohos:height="match_content"
            ohos:width="match_content"
            app:bt_colorActive="$color:purple"
            app:bt_colorInactive="$color:purple_clear"
            app:bt_icon="$graphic:ic_bottombar_person"
            app:bt_sel_icon="$graphic:ic_bottombar_person_select"
            app:bt_shape="$graphic:bg_bottombar_overall"
            app:bt_shapeRect="$graphic:bg_bottombar_person_activeshape"
            app:bt_title="我的"/>
    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

</DirectionalLayout>