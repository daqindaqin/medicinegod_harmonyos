<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom|horizontal_center"
    ohos:background_element="$color:blue_clear">


        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10vp"
            ohos:end_margin="20vp"
            ohos:start_margin="20vp"
            ohos:text="注册新用户"
            ohos:text_alignment="left|vertical_center"
            ohos:text_color="$color:white"
            ohos:text_size="32vp"
            ohos:text_weight="700"
            ohos:top_margin="50vp"/>

        <Text
            ohos:id="$+id:rg_goto"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10vp"
            ohos:end_margin="20vp"
            ohos:start_margin="20vp"
            ohos:text="已有账号?  去登录→"
            ohos:text_alignment="right|vertical_center"
            ohos:text_color="$color:white"
            ohos:text_size="18vp"
            ohos:text_weight="300"
            ohos:top_margin="20vp"/>

        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="$graphic:bg_register">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                <!--登录名-->
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="5vp"
                    ohos:orientation="horizontal"
                    ohos:top_margin="25vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:end_margin="5vp"
                        ohos:start_margin="30vp"
                        ohos:text="用户名"
                        ohos:text_alignment="left|vertical_center"
                        ohos:text_color="$color:black_clear"
                        ohos:text_size="24vp"
                        ohos:text_weight="700"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:text="(登录账号所使用)"
                        ohos:text_alignment="left|vertical_center"
                        ohos:text_color="$color:black_line"
                        ohos:text_size="18vp"
                        ohos:text_weight="700"/>
                </DirectionalLayout>

                <TextField
                    ohos:id="$+id:rg_userlname"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:bg_rglg_textfield"
                    ohos:bottom_margin="10vp"
                    ohos:bottom_padding="10vp"
                    ohos:end_margin="30vp"
                    ohos:end_padding="10vp"
                    ohos:hint="6-12个字母或数字组成"
                    ohos:hint_color="$color:black_line"
                    ohos:max_text_lines="1"
                    ohos:start_margin="30vp"
                    ohos:start_padding="15vp"
                    ohos:text_color="$color:black"
                    ohos:text_size="18vp"
                    ohos:text_weight="500"
                    ohos:top_margin="5vp"
                    ohos:top_padding="5vp"
                    />

                <Text
                    ohos:id="$+id:rg_userlname_status"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:end_margin="30vp"
                    ohos:multiple_lines="true"
                    ohos:start_margin="30vp"
                    ohos:text="用户名由6-12个字母或数字组成"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:red"
                    ohos:text_size="14vp"
                    ohos:text_weight="300"
                    ohos:visibility="hide"
                    />

                <!--密码-->
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="5vp"
                    ohos:end_margin="5vp"
                    ohos:start_margin="30vp"
                    ohos:text="密码"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="24vp"
                    ohos:text_weight="700"
                    ohos:top_margin="20vp"/>

                <TextField
                    ohos:id="$+id:rg_userpwd"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:bg_rglg_textfield"
                    ohos:bottom_margin="10vp"
                    ohos:bottom_padding="10vp"
                    ohos:end_margin="30vp"
                    ohos:end_padding="10vp"
                    ohos:hint="6-12个字母数字_ @ . 组成"
                    ohos:hint_color="$color:black_line"
                    ohos:max_text_lines="1"
                    ohos:start_margin="30vp"
                    ohos:start_padding="15vp"
                    ohos:text_color="$color:black"
                    ohos:text_input_type="pattern_password"
                    ohos:text_size="18vp"
                    ohos:text_weight="500"
                    ohos:top_margin="5vp"
                    ohos:top_padding="5vp"
                    />

                <Text
                    ohos:id="$+id:rg_userpwd_status"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:end_margin="30vp"
                    ohos:multiple_lines="true"
                    ohos:start_margin="30vp"
                    ohos:text="密码由6-12个字母、数字、下划线、@、点组成"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:red"
                    ohos:text_size="14vp"
                    ohos:text_weight="300"
                    ohos:visibility="hide"

                    />

                <!--邮件-->
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="5vp"
                    ohos:end_margin="5vp"
                    ohos:start_margin="30vp"
                    ohos:text="邮箱"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="24vp"
                    ohos:text_weight="700"
                    ohos:top_margin="20vp"/>

                <TextField
                    ohos:id="$+id:rg_usermail"

                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:bg_rglg_textfield"
                    ohos:bottom_margin="10vp"
                    ohos:bottom_padding="10vp"
                    ohos:end_margin="30vp"
                    ohos:end_padding="10vp"
                    ohos:hint="填入绑定的邮箱"
                    ohos:hint_color="$color:black_line"
                    ohos:max_text_lines="1"
                    ohos:start_margin="30vp"
                    ohos:start_padding="15vp"
                    ohos:text_color="$color:black"
                    ohos:text_input_type="pattern_text_email_address"
                    ohos:text_size="18vp"
                    ohos:text_weight="500"
                    ohos:top_margin="5vp"
                    ohos:top_padding="5vp"
                    />

                <Text
                    ohos:id="$+id:rg_usermail_status"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:end_margin="30vp"
                    ohos:multiple_lines="true"
                    ohos:start_margin="30vp"
                    ohos:text="邮箱格式不正确"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:red"
                    ohos:text_size="14vp"
                    ohos:text_weight="300"

                    ohos:visibility="hide"
                    />

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="left|vertical_center"
                    ohos:orientation="horizontal">

                    <TextField
                        ohos:id="$+id:rg_usermail_code"
                        ohos:height="match_content"
                        ohos:width="150vp"
                        ohos:background_element="$graphic:bg_rglg_textfield"
                        ohos:bottom_margin="5vp"
                        ohos:bottom_padding="5vp"
                        ohos:end_margin="5vp"
                        ohos:end_padding="10vp"
                        ohos:hint="0000"
                        ohos:hint_color="$color:black_line"
                        ohos:letter_spacing="1"
                        ohos:max_text_lines="1"
                        ohos:start_margin="30vp"
                        ohos:start_padding="15vp"
                        ohos:text_color="$color:black"
                        ohos:text_input_type="pattern_number"
                        ohos:text_size="18vp"
                        ohos:text_weight="500"
                        ohos:top_margin="10vp"
                        ohos:top_padding="10vp"
                        />

                    <Text
                        ohos:id="$+id:rg_usermail_sendcode"

                        ohos:height="match_content"
                        ohos:width="140vp"
                        ohos:background_element="$graphic:bg_rglg_textfield"
                        ohos:bottom_padding="12vp"
                        ohos:end_margin="30vp"
                        ohos:end_padding="10vp"
                        ohos:start_margin="5vp"
                        ohos:start_padding="15vp"
                        ohos:text="获取验证码"
                        ohos:text_alignment="horizontal_center|vertical_center"
                        ohos:text_color="$color:blue"
                        ohos:text_size="16vp"
                        ohos:text_weight="500"
                        ohos:top_margin="6vp"
                        ohos:top_padding="12vp"
                        />
                </DirectionalLayout>
                <Text
                    ohos:id="$+id:rg_usermailcode_status"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:end_margin="30vp"
                    ohos:multiple_lines="true"
                    ohos:start_margin="30vp"
                    ohos:text="验证码不正确"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:red"
                    ohos:text_size="14vp"
                    ohos:text_weight="300"

                    ohos:visibility="hide"
                    />
                <!--手机号-->
                <Text

                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_margin="5vp"
                    ohos:end_margin="5vp"
                    ohos:start_margin="30vp"
                    ohos:text="手机号"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:black_clear"
                    ohos:text_size="24vp"
                    ohos:text_weight="700"
                    ohos:top_margin="20vp"/>

                <TextField
                    ohos:id="$+id:rg_userphone"

                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:bg_rglg_textfield"
                    ohos:bottom_margin="10vp"
                    ohos:bottom_padding="10vp"
                    ohos:end_margin="30vp"
                    ohos:end_padding="10vp"
                    ohos:hint="填入绑定的11位手机号"
                    ohos:hint_color="$color:black_line"
                    ohos:letter_spacing="0.3"
                    ohos:max_text_lines="1"
                    ohos:start_margin="30vp"
                    ohos:start_padding="15vp"
                    ohos:text_color="$color:black"
                    ohos:text_input_type="pattern_phone"
                    ohos:text_size="18vp"
                    ohos:text_weight="500"
                    ohos:top_margin="5vp"
                    ohos:top_padding="5vp"
                    />

                <Text
                    ohos:id="$+id:rg_userphone_status"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:end_margin="30vp"
                    ohos:multiple_lines="true"
                    ohos:start_margin="30vp"
                    ohos:text="手机号不正确"
                    ohos:text_alignment="left|vertical_center"
                    ohos:text_color="$color:red"
                    ohos:text_size="14vp"
                    ohos:text_weight="300"
                    ohos:visibility="hide"

                    />

                <Text
                    ohos:id="$+id:rg_ok"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:bg_rglg_btn"
                    ohos:bottom_margin="20vp"
                    ohos:bottom_padding="10vp"
                    ohos:end_margin="30vp"
                    ohos:letter_spacing="0.2"
                    ohos:start_margin="30vp"
                    ohos:text="注册并登录"
                    ohos:text_alignment="horizontal_center|vertical_center"
                    ohos:text_color="$color:white"
                    ohos:text_size="20vp"
                    ohos:text_weight="700"
                    ohos:top_margin="10vp"
                    ohos:top_padding="10vp"
                    />
            </DirectionalLayout>
        </ScrollView>




</DirectionalLayout>

