<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:alignment="top"
    ohos:background_element="$color:white">

        <DirectionalLayout
            ohos:id="$+id:things_head_of_top"
            ohos:height="70vp"
            ohos:width="match_parent"
            ohos:alignment="left|vertical_center"
            ohos:orientation="horizontal"
            >
                <Image
                    ohos:id="$+id:things_image_head"
                    ohos:height="45vp"
                    ohos:width="45vp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:head"
                    ohos:top_margin="15vp"
                    ohos:start_margin="20vp"
                    ohos:end_margin="5vp"
                    ohos:bottom_margin="5vp"
                    />
                <DirectionalLayout
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:alignment="vertical_center|left">
                        <DirectionalLayout
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:orientation="vertical"
                            ohos:alignment="left|vertical_center"
                            >
                                <!--名字定义最多8个中文字符/16英文-->
                                <Text
                                    ohos:id="$+id:things_title_in_user"
                                    ohos:height="match_content"
                                    ohos:width="match_content"
                                    ohos:text_size="18fp"
                                    ohos:text_alignment="left|vertical_center"
                                    ohos:text_color="$color:black_clear"
                                    ohos:text_weight="700"
                                    ohos:text="用户名字要八个字"
                                    ohos:scrollable="true"
                                    ohos:top_margin="15vp"
                                    ohos:start_margin="5vp"
                                    ohos:end_margin="5vp"
                                    ohos:bottom_margin="5vp"
                                    ohos:max_text_lines="1"
                                    ohos:max_width="140vp"
                                    />
                                <Text
                                    ohos:id="$+id:online_status"
                                    ohos:height="match_content"
                                    ohos:width="match_content"
                                    ohos:text_size="14fp"
                                    ohos:text_alignment="left|vertical_center"
                                    ohos:text_color="$color:red_clear"
                                    ohos:text_weight="500"
                                    ohos:text="● 未启用云端"
                                    ohos:start_margin="5vp"/>
                        </DirectionalLayout>
                        <DirectionalLayout
                            ohos:height="match_content"
                            ohos:width="match_parent"
                            ohos:alignment="right|vertical_center"
                            >
                                <Text
                                    ohos:id="$+id:things_textField_search"
                                    ohos:height="40fp"
                                    ohos:width="match_parent"
                                    ohos:min_width="150vp"
                                    ohos:text_size="14fp"
                                    ohos:text_alignment="left"
                                    ohos:text_color="#000000"
                                    ohos:layout_alignment="left|vertical_center"
                                    ohos:background_element="$graphic:bg_textfield_search"
                                    ohos:element_right="$media:search"
                                    ohos:element_padding="5vp"
                                    ohos:padding="10vp"
                                    ohos:top_margin="20vp"
                                    ohos:bottom_margin="20vp"
                                    ohos:start_margin="10vp"
                                    ohos:end_margin="20vp"/>
                        </DirectionalLayout>
                </DirectionalLayout>




        </DirectionalLayout>



        <ListContainer
            ohos:id="$+id:things_list"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:margin="5vp"
            ohos:rebound_effect="true"
            ohos:below="$id:things_head_of_top"
            ohos:background_element="$color:white"
            />


</DependentLayout>