<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:bg_round"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_round">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="20vp"
            ohos:text="关于OTC与Rx标识的答疑"
            ohos:text_color="#000"
            ohos:text_size="24fp"
            ohos:text_weight="700"/>

        <Component
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#AAA"/>
    </DirectionalLayout>

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:rebound_effect="true"
        ohos:padding="10vp">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            >
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="① OTC是非处方药的标志。"
                ohos:text_size="20vp"
                ohos:text_weight="700"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:text_color="$color:green"
                />

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="        非处方（OTC）类药品是可以自行判断、购买和使用的药品。对于那些可自我认识和辨别症状，并能自我治疗的疾病（如感冒、发烧等），消费者可通过阅读药品说明书或咨询医师或药师后自己使用。"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                />

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="② Rx是处方药的标志。"
                ohos:text_size="20vp"
                ohos:text_weight="700"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:text_color="$color:red"
                />

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="        处方（Rx）类药品是指有处方权的医生所开具出来的处方，并由此从医院药房购买的药物。这种药通常都具有一定的毒性及其他潜在的影响，用药方法和时间都有特殊要求，必须在医生指导下使用。"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                />

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="③ OTC和Rx药品辨别方法"
                ohos:text_size="20vp"
                ohos:text_weight="700"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:text_color="$color:blue"
                />

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="        品牌、标识物、标签及含有OTC（非处方药）或Rx（处方药）指导用语的药物。"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="(如下图均为非处方药标识)"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="center"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                ohos:text_color="$color:green"
                />
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:otcchose_otc"
                ohos:margin="10vp"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="(如下图均为处方药标识)"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="center"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                ohos:text_color="$color:red"
                />
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:otcchose_rx"
                ohos:margin="10vp"
                ohos:bottom_padding="50vp"/>



        </DirectionalLayout>
    </ScrollView>


    <DirectionalLayout
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:background_element="#77C7A7"
        ohos:padding="15vp">

        <Text
            ohos:id="$+id:tv_temp"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#fff"
            ohos:padding="10vp"
            ohos:text="点我评论"
            ohos:text_size="14fp"
            ohos:text_color="#333"/>

    </DirectionalLayout>


</DirectionalLayout>