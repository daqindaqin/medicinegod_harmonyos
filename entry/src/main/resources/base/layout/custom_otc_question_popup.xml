<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:popup_bg"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:bg_round"
    ohos:orientation="vertical"
    ohos:alignment="top">

    <DirectionalLayout
        ohos:below="$id:popup_bg"
        ohos:id="$+id:popup_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_round">
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="20vp"
            ohos:text="关于OTC与Rx标识的答疑"
            ohos:text_color="#000"
            ohos:text_size="24fp"
            ohos:text_weight="700"/>
        <Component
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#AAA"/>
    </DirectionalLayout>

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:below="$id:popup_title"
        ohos:rebound_effect="true"
        ohos:margin="15vp"
        >
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            >
            <Text
                ohos:id="$+id:fst_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="① OTC是非处方药的标志。"
                ohos:text_size="20vp"
                ohos:text_weight="700"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:text_color="$color:green"
                />

            <Text
                ohos:id="$+id:fst_context"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="        非处方（OTC）类药品是可以自行判断、购买和使用的药品。对于那些可自我认识和辨别症状，并能自我治疗的疾病（如感冒、发烧等），消费者可通过阅读药品说明书或咨询医师或药师后自己使用。"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                ohos:below="$id:fst_title"
                />

            <Text
                ohos:id="$+id:sed_title"
                ohos:below="$id:fst_context"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="② Rx是处方药的标志。"
                ohos:text_size="20vp"
                ohos:text_weight="700"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:text_color="$color:red"
                />

            <Text
                ohos:id="$+id:sed_context"
                ohos:below="$id:sed_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="        处方（Rx）类药品是指有处方权的医生所开具出来的处方，并由此从医院药房购买的药物。这种药通常都具有一定的毒性及其他潜在的影响，用药方法和时间都有特殊要求，必须在医生指导下使用。"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                />

            <Text
                ohos:id="$+id:trd_title"
                ohos:below="$id:sed_context"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="③ OTC和Rx药品辨别方法"
                ohos:text_size="20vp"
                ohos:text_weight="700"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:text_color="$color:blue"
                />

            <Text
                ohos:id="$+id:trd_context"
                ohos:below="$id:trd_title"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="        品牌、标识物、标签及含有OTC（非处方药）或Rx（处方药）指导用语的药物。"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                />
            <Text
                ohos:id="$+id:fth_desp"
                ohos:below="$id:trd_context"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="(如下图均为非处方药标识)"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="center"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                ohos:text_color="$color:green"
                />
            <Image
                ohos:id="$+id:fth_img"
                ohos:below="$id:fth_desp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:otcchose_otc"
                ohos:margin="10vp"/>

            <Text
                ohos:id="$+id:fvth_desp"
                ohos:below="$id:fth_img"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="(如下图均为处方药标识)"
                ohos:text_size="18vp"
                ohos:text_weight="500"
                ohos:text_alignment="center"
                ohos:multiple_lines="true"
                ohos:bottom_padding="30vp"
                ohos:text_color="$color:red"
                />
            <Image
                ohos:id="$+id:fvth_img"
                ohos:below="$id:fvth_desp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:otcchose_rx"
                ohos:margin="10vp"
                ohos:bottom_padding="50vp"/>
        </DependentLayout>
    </ScrollView>

</DependentLayout>