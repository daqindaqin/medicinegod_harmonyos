<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:white"
    ohos:alignment="vertical_center|horizontal_center"
    ohos:orientation="vertical">

    <com.daqin.medicinegod.utils.imageControler.EditPhotoView
        xmlns:crop="http://schemas.huawei.com/res/ohos-auto"
        ohos:id="$+id:editable_image"
        ohos:height="600vp"
        ohos:width="300vp"
        ohos:background_element="$color:purple_light"
        ohos:margin="10vp"
        crop:crop_corner_color="$color:red"
        crop:crop_dot_color="#333333"
        crop:crop_line_color="#FFFFFF"
        crop:crop_shadow_color="#77FFFFFF"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center|horizontal_center"
        ohos:orientation="horizontal"
        ohos:padding="10vp">

        <Button
            ohos:id="$+id:imageControl_btn_back"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_dtl_elabel_add"
            ohos:bottom_padding="5vp"
            ohos:end_padding="10vp"
            ohos:layout_alignment="center"
            ohos:margin="5vp"
            ohos:start_padding="10vp"
            ohos:text="◀"
            ohos:text_color="$color:white"
            ohos:text_size="18fp"
            ohos:text_weight="500"
            ohos:top_padding="5vp"/>


        <Button
            ohos:id="$+id:imageControl_btn_rotate"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_add_newLabel_label"
            ohos:bottom_padding="5vp"
            ohos:end_padding="10vp"
            ohos:layout_alignment="center"
            ohos:margin="5vp"
            ohos:start_padding="10vp"
            ohos:text="旋转90°"
            ohos:text_color="$color:white"
            ohos:text_size="18fp"
            ohos:text_weight="500"
            ohos:top_padding="5vp"/>
        <Button
            ohos:id="$+id:imageControl_btn_crop"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:bg_dtl_elabel_add"
            ohos:bottom_padding="5vp"
            ohos:end_padding="10vp"
            ohos:layout_alignment="center"
            ohos:margin="5vp"
            ohos:start_padding="10vp"
            ohos:text="裁剪"
            ohos:text_color="$color:white"
            ohos:text_size="18fp"
            ohos:text_weight="500"
            ohos:top_padding="5vp"/>


    </DirectionalLayout>

</DirectionalLayout>

