<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:margin="5vp"
    ohos:bottom_padding="10vp"
    ohos:background_element="$graphic:bg_list_item_card"
    >

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="left|vertical_center"
        ohos:orientation="horizontal">
        <Text
            ohos:id="$+id:text_name"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="一二三四五六七八九十胶囊"
            ohos:text_size="24fp"
            ohos:text_color="$color:black_clear"
            ohos:text_weight="700"
            ohos:max_width="200vp"
            ohos:start_margin="10vp"
            ohos:end_margin="8vp"
            ohos:top_margin="10vp"
            ohos:bottom_margin="10vp"
            ohos:scrollable="true"
            ohos:text_alignment="left"
            />
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="left|vertical_center">
            <Text
                ohos:id="$+id:text_otc"
                ohos:height="match_content"
                ohos:width="50fp"
                ohos:background_element="$graphic:bg_text_otc_otc_green"
                ohos:text="OTC"
                ohos:text_alignment="center"
                ohos:text_color="$color:white"
                ohos:text_weight="700"
                ohos:start_padding="5vp"
                ohos:end_padding="5vp"
                ohos:top_padding="2vp"
                ohos:bottom_padding="2vp"
                ohos:start_margin="5vp"
                ohos:end_margin="5vp"
                ohos:text_size="14fp"
                />
<!--
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                ohos:alignment="right|vertical_center"
                ohos:end_margin="10vp">
                <Text
                    ohos:id="$+id:text_ctrl"
                    ohos:height="match_content"
                    ohos:width="50vp"
                    ohos:background_element="$graphic:background_text_usemedicine"
                    ohos:text="操作"
                    ohos:text_alignment="center"
                    ohos:text_color="$color:white"
                    ohos:text_weight="700"
                    ohos:start_padding="5vp"
                    ohos:end_padding="5vp"
                    ohos:top_padding="2vp"
                    ohos:end_margin="5vp"
                    ohos:start_margin="5vp"
                    ohos:bottom_padding="2vp"
                    ohos:text_size="14fp"/>
            </DirectionalLayout>
-->

        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:alignment="top|center"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:image_png"
            ohos:height="90vp"
            ohos:width="160vp"
            ohos:start_margin="10vp"
            ohos:end_margin="10vp"
            ohos:image_src="$media:test"
            ohos:scale_mode="stretch"
            />
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:alignment="top|center">

            <Text
                ohos:id="$+id:text_outdate"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:end_margin="5vp"
                ohos:max_text_lines="2"
                ohos:multiple_lines="true"
                ohos:start_margin="5vp"
                ohos:text="[正常使用]                            请遵医嘱、说明书使用。"
                ohos:text_color="$color:green"
                ohos:text_weight="700"
                ohos:text_size="14fp"
                />
            <Text
                ohos:id="$+id:text_margin"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:end_margin="5vp"
                ohos:max_text_lines="1"
                ohos:multiple_lines="true"
                ohos:start_margin="5vp"
                ohos:text="约能使用：2  次"
                ohos:text_color="$color:black_clear"
                ohos:text_weight="300"
                ohos:text_size="12fp"
                ohos:top_margin="5vp"
                />
            <Text
                ohos:id="$+id:text_usage"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:max_text_lines="1"
                ohos:start_margin="5vp"
                ohos:end_margin="5vp"
                ohos:multiple_lines="true"
                ohos:text="500g/次/天"
                ohos:text_color="$color:black_clear"
                ohos:text_weight="300"
                ohos:text_size="12fp"
                ohos:top_margin="5vp"
                />



        </DirectionalLayout>


    </DirectionalLayout>






</DirectionalLayout>
